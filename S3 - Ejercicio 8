/*
Elabore un programa que permita aceptar un número entero,
seguidamente se debe determinar y mostrar si el número eso no
múltiplo de siete.
*/

package ejercicio.pkg8;

import java.util.Scanner;

public class Ejercicio8 {

    public static void main(String[] args) {
        
        int numero;
        boolean condicion;
        
        Scanner sc = new Scanner (System.in);
        
        System.out.println("Ingresar un número:");
        numero = sc.nextInt();
        
        if (numero % 7 == 0) {
            condicion = true;
            System.out.println(numero + " es múltiplo de 7?: " + condicion);
            
        } else {
            condicion = false;
            System.out.println(numero + " es múltiplo de 7?: " + condicion);
        }
    }
}
