/*
Elabore un programa que permita aceptar dos números diferentes,
seguidamente se debe determinar y mostrar el mayor de los
números.
*/

package ejercicio.pkg7;

import java.util.Scanner;

public class Ejercicio7 {

    public static void main(String[] args) {
        
        double n1, n2;
        
        Scanner sc = new Scanner (System.in);
        
        System.out.println("Ingresar primer número:");
        n1 = sc.nextDouble();
        
        System.out.println("Ingresar segundo número:");
        n2 = sc.nextDouble();
        
        if (n1 > n2) {
            System.out.println(n1 + "es el número mayor");
            
        } else {
            
            if (n1 == n2) {
                System.out.println("Los números deben ser distintos");
                
            } else {
                System.out.println(n2 + "es el número mayor");
                
            }
        }
    }
}
