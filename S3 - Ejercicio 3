/*
Construir un programa en Java que permita ingresar un número, si
el número es mayor de 500, se debe calcular y mostrar en pantalla
el 18% de este, caso contrario deberá mostrar el 50% del mismo
número.
*/

package ejercicio.pkg3;

import java.util.Scanner;

public class Ejercicio3 {

    public static void main(String[] args) {
        
        double numero, porcentaje;
        
        Scanner sc = new Scanner (System.in);
        
        System.out.println("Ingresar un número:");
        numero = sc.nextDouble();
        
        if (numero > 500) {
            System.out.println("El 18% de " + numero + " es: " + (numero *0.18));
            
        } else {
            System.out.println("El 50% de " + numero + " es: " + (numero *0.50));
            
        }
    }
}
